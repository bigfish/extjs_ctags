#!/bin/bash
#wrapper to generate sorted tags file in same dir
if [ -z $1 ];then
	echo "source directory containing js files is required argument"
	exit 1
fi
SRC=$1
EXT=$EXT_HOME
TMP_FILE="tmp.tags"
INFO_FILE="info"
rm $INFO_FILE
touch info

$EXT/genExtTags $SRC >  $TMP_FILE

$EXT/replacePointers.pl $TMP_FILE > tags

rm $TMP_FILE
